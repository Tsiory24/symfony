# Étape 1 : Construire l'environnement PHP avec Composer
FROM php:8.2-apache as base

# Met à jour les packages et installe les dépendances nécessaires
RUN apt-get update && apt-get install -y \
    git \
    unzip \
    libicu-dev \
    libzip-dev \
    libonig-dev \
    nodejs \
    npm \
    curl \
    && docker-php-ext-install intl pdo pdo_mysql zip opcache \
    && docker-php-ext-enable intl pdo_mysql zip opcache

# Activer le module Apache mod_rewrite (nécessaire pour Symfony)
RUN a2enmod rewrite

# Installer Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Définir le dossier de travail dans le container
WORKDIR /var/www/html

# Copier les fichiers de configuration du serveur
COPY ./docker/apache/apache.conf /etc/apache2/sites-available/000-default.conf

# Copier les fichiers du projet Symfony
COPY . /var/www/html

# Installe les dépendances PHP via Composer
RUN composer install --no-dev --optimize-autoloader

# Installer Node.js et les dépendances front-end (si applicable)
RUN npm install && npm run build

# Fixer les permissions pour l'environnement Symfony
RUN chown -R www-data:www-data /var/www/html/var /var/www/html/public

# Port exposé
EXPOSE 80

# Commande par défaut pour démarrer le serveur
CMD ["apache2-foreground"]